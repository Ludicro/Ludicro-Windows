<html>
<head>
    <title>Prank Full Screen</title>
    <hta:application
        id="prankWindow"
        border="none"
        caption="no"
        showintaskbar="no"
        windowstate="maximize"
        topmost="yes">
    </hta:application>
    <style type="text/css">
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: black;
        }
        #gif {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: fill;
        }
    </style>
    <script language="VBScript">
        Sub Window_OnLoad
            screenNum = CInt(Replace(Mid(document.location.search, 8), """", ""))
            ' Position each window at multiples of the screen width
            xPos = Screen.Width * screenNum
            window.moveTo xPos, 0
            window.focus()
        End Sub
    </script>
</head>
<body>
    <img id="gif" src="C:\Windows\Temp\nyan_glitch.gif" />
</body>
</html>
